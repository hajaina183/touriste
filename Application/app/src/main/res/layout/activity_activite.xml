<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color">

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color"
        android:fillViewport="true"
        android:layout_above="@id/footerFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            tools:context=".Activite">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/dancing_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Les activités"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <!-- TextView 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="Découvrez le meilleur de Madagascar à travers une sélection d'activités inoubliables ! Plongez dans l'essence de cette île extraordinaire en explorant ses endroits emblématiques, en rencontrant sa faune fascinante et en vivant des aventures uniques au cœur de l'océan Indien. Laissez-nous vous guider vers des expériences exceptionnelles qui vous laisseront des souvenirs mémorables. Bienvenue dans l'univers des meilleures activités à Madagascar!"
                android:textColor="#fff"
                android:textSize="16sp">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/randonnee"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="14dp">

                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="112dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="50px"
                        android:src="@drawable/randonnee" />

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="130px"
                        android:text="Randonnées"
                        android:textColor="#121010"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/plonge"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="14dp">

                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="112dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="50px"
                        android:src="@drawable/plongee_sous_marine" />

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="90px"
                        android:text="Plongée sous marine"
                        android:textColor="#121010"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/faune"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="14dp">

                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="112dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="50px"
                        android:src="@drawable/observation_faune_lemurien" />

                    <TextView
                        android:layout_width="173dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="90px"
                        android:text="Observation de la faune"
                        android:textColor="#121010"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/baleine"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="14dp">

                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="112dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="50px"
                        android:src="@drawable/observation_baleine" />

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="90px"
                        android:text="Observation des baleines"
                        android:textColor="#121010"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/footerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
