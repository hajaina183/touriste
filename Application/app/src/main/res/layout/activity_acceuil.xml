<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        style="@style/SCREEN"
        android:layout_above="@id/footerFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            tools:context=".Acceuil">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/dancing_bold"
                android:gravity="center"
                android:padding="5dp"
                style="@style/TEXT"
                android:text="Touris Mada"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <!-- TextView 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="Plongez dans la magie de Madagascar - Explorez un trésor naturel préservé, rencontrez une faune extraordinaire et vivez des aventures inoubliables au cœur de l'océan Indien."
                android:textColor="#fff"
                style="@style/TEXT"
                android:textSize="16sp">

            </TextView>

            <androidx.cardview.widget.CardView
                style="@style/CARD"
                android:id="@+id/endroitPopulaire"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="569dp"
                        android:layout_height="232dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="20px"
                        android:src="@drawable/endroits_populaire" />

                    <TextView
                        style="@style/TEXT"
                        android:layout_width="324dp"
                        android:layout_marginTop="20px"
                        android:layout_height="wrap_content"
                        android:text="Endroits populaire"
                        android:textColor="#121010"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CARD"
                android:id="@+id/activite"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="569dp"
                        android:layout_height="232dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="20px"
                        android:src="@drawable/activite" />

                    <TextView
                        android:layout_width="324dp"
                        android:layout_marginTop="20px"
                        android:layout_height="wrap_content"
                        android:text="Activités"
                        android:textColor="#121010"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CARD"
                android:id="@+id/culture"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="569dp"
                        android:layout_height="232dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="20px"
                        android:src="@drawable/culture" />

                    <TextView
                        style="@style/TEXT"
                        android:layout_width="324dp"
                        android:layout_marginTop="20px"
                        android:layout_height="wrap_content"
                        android:text="Culture"
                        android:textColor="#121010"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CARD"
                android:id="@+id/conseil"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="569dp"
                        android:layout_height="232dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="20px"
                        android:src="@drawable/conseil" />

                    <TextView
                        style="@style/TEXT"
                        android:layout_width="324dp"
                        android:layout_marginTop="20px"
                        android:layout_height="wrap_content"
                        android:text="Conseils"
                        android:textColor="#121010"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/footerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>