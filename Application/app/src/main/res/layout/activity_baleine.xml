<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Baleine"
    style="@style/SCREEN">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/SCREEN"
        android:fillViewport="true"
        android:layout_above="@id/footerFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            tools:context=".Baleine">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="247dp"
                android:background="@color/white"
                tools:context=".Baleine">

                <ImageView
                    android:id="@+id/imageViewId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/observation_baleine"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/dancing_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Observation des baleines à Madagascar"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <!-- TextView 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="Chaque année de juin à septembre, les baleines à bosse migrent au large des côtes nord-est de Madagascar pour s’accoupler et mettre bas. Vous pourrez ainsi embarquer en petits groupes, pour observer ces impressionnants mammifères marins qui arrivent par centaines."
                android:textColor="#fff"
                android:textSize="16sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/CARD"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <VideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="110dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/dancing_bold"
                        android:padding="10dp"
                        android:text="Une expérience unique"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dm_medium"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="En juin, observez le majestueux ballet des baleines à bosse à Madagascar. Assister aux incroyables parades amoureuses des mâles : sauts, frappes de nageoires, dressements hors de l'eau. Peut-être verrez-vous la naissance émouvante d'un baleineau et ses premières leçons de vie avec sa mère. Expérience unique !"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/dancing_bold"
                        android:padding="5dp"
                        android:text="Comment la reconnaître?"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="163dp"
                        android:layout_height="132dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dm_medium"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="On la reconnait à son dos entièrement noir, et son ventre blanchâtre. Mais elle se caractérise surtout par sa tête et sa mâchoire qui sont couvertes de petites protubérances appelées tubercules."
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    style="@style/CARD"
                    android:layout_width="193dp"
                    android:layout_height="126dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:orientation="vertical"
                        android:padding="14dp">


                        <ImageView
                            android:layout_width="157dp"
                            android:layout_height="91dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10px"
                            android:layout_marginBottom="20px"
                            android:src="@drawable/observation_baleine_2" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/CARD"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="126dp"
                        android:orientation="vertical"
                        android:padding="14dp">


                        <ImageView
                            android:layout_width="159dp"
                            android:layout_height="100dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="5px"
                            android:layout_marginBottom="20px"
                            android:src="@drawable/obesrvation_baleine_3" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="173dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dm_medium"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Après avoir passé la moitié de l’année à se nourrir, les baleines à bosse quittent les côtes polaires de l’Antarctique pour rejoindre les eaux tropicales de Madagascar. Elles se divisent en deux groupes, l’un ira vers la côte ouest (Nosy Be), et l’autre vers la côte est (Île Sainte Marie et la baie d’Antongil)."
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
    android:id="@+id/footerFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true" />
</RelativeLayout>
