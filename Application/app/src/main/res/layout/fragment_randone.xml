<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Randone"
    android:background="@color/app_color"
    android:id="@+id/mainContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".Randone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="247dp"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".Randone">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/activite"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/dancing_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="Les meilleurs endroits pour la randonnée à Madagascar"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <!-- TextView 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="Madagascar est un endroit idéal pour les amateurs de randonnée en raison de sa biodiversité unique et de ses paysages époustouflants. Il y a de nombreux parcs nationaux et réserves naturelles à explorer, ainsi que des montagnes, des forêts et des gorges à couper le souffle."
            android:textColor="#fff"
            android:textSize="16sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:orientation="vertical"
                    android:padding="14dp">


                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="102dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="20px"
                        android:src="@drawable/conseil1" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Madagascar a une riche diversité culturelle. Soyez respectueux envers les coutumes et traditions locales. Apprenez quelques phrases en malgache pour montrer votre intérêt pour la culture du pays."
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="163dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Hydratez-vous et protégez-vous du soleil : Les régions de Madagascar peuvent être chaudes et ensoleillées. Buvez beaucoup d'eau pour rester hydraté et portez une protection solaire, un chapeau et des vêtements légers pour vous protéger du soleil."
                android:textColor="@color/black"
                android:textSize="10sp" />

            <androidx.cardview.widget.CardView

                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:orientation="vertical"
                    android:padding="14dp">


                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="102dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="20px"
                        android:src="@drawable/conseil2" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:orientation="vertical"
                    android:padding="14dp">


                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="102dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="20px"
                        android:src="@drawable/conseil3" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Goûtez la cuisine locale : La gastronomie malgache est riche en saveurs uniques. Essayez les plats locaux et explorez les marchés pour découvrir de nouvelles saveurs et spécialités régionales."
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Prenez des précautions sanitaires : Avant de voyager à Madagascar, vérifiez les recommandations de santé et de vaccination. Emportez des médicaments de base et des articles d'hygiène pour rester en bonne santé pendant votre séjour."
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>